@page "/scan"

<h3>Scan QR-kode</h3>

<!-- Video-element til QR-scanneren -->
<video id="video" width="300" height="200" autoplay style="display: none;"></video>
<p id="qrResult">QR-kode indhold: <span id="result"></span></p>

<!-- Scan-knap med onclick direkte i HTML -->
<button id="startScanButton" onclick="startScanning()">Start Scan</button>
