@page "/task-sequence/{taskId:int}/step/{stepNumber:int}"
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h3>Opgave Sekvens</h3>

@if (StepData == null)
{
    <p>Indlæser opgavetrin...</p>
}
else
{
    <div>
        <img src="@StepData.ImageUrl" alt="Trin billede" width="300" />
        <p>@StepData.Text</p>
    </div>
    <button @onclick="NextStep">Næste</button>
}

@code {
    [Parameter] public int taskId { get; set; }
    [Parameter] public int stepNumber { get; set; }

    private TaskStep? StepData;

    protected override async Task OnInitializedAsync()
    {
        // Hent opgavetrinnet fra API’en
        StepData = await Http.GetFromJsonAsync<TaskStep>($"http://localhost:5032/api/tasksequence/{taskId}/step/{stepNumber}");
    }

    private async Task NextStep()
    {
        // Naviger til næste trin i sekvensen
        stepNumber++;
        NavigationManager.NavigateTo($"/task-sequence/{taskId}/step/{stepNumber}");
    }

    public class TaskStep
    {
        public string ImageUrl { get; set; }
        public string Text { get; set; }
    }
}