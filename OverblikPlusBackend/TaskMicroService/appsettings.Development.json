{
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/dev-log-.txt", "rollingInterval": "Day" } }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_SERVER};Database=${DB_NAME};User Id=${DB_USER};Password=${DB_PASSWORD};Encrypt=False;",
    "BlobStorage": "${BLOB_STORAGE_CONNECTION_STRING}"
  },
  "Jwt": {
    "Key": "MyVeryStrongSecretKeyForJWT1234567890",
    "Issuer": "http://localhost",
    "Audience": "http://localhost"
  }
}
