{
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      { "Name": "File", "Args": { "path": "logs/dev-log-.txt", "rollingInterval": "Day" } }
    ],
    "Enrich": ["FromLogContext"]
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "${DB_CONNECTION_STRING}"
  },

  "EncryptionSettings": {
    "EncryptionKey": "${ENCRYPTION_KEY}"
  },

  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}"
  }
}
